<h3>Inbox</h3>
<table class="table table-hover">
	<thead>
		<th> # </th>
		<th> Sender's Name </th>
		<th> Subject </th>
	</thead>
	<tbody>
	  <% @messages.each do |message| %>
	  	<tr>
	  		<td></td>
	      <td><a href="/users/<%= message.sender_id %>"><%= User.find(message.sender_id).name %></a></td>
	      <td><a href="/message/<%= message.id %>"><%= message.subject %></a></td>
	    </tr>
	  <% end %>
	</tbody>
</table>
